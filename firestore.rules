
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is the specific admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == "Divitbansal016@gmail.com" || 
        request.auth.token.email_verified == true && request.auth.token.email == "Divitbansal016@gmail.com"
      );
    }

    // USERS COLLECTION
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      // Explicitly allow listing the collection for the admin
      allow list: if isAdmin();
    }
    
    // NEWS COLLECTION
    match /news/{postId} {
      allow read: if true; 
      allow write: if isAdmin();
    }
    
    // PAYMENT REQUESTS
    match /payment_requests/{requestId} {
      allow create: if request.auth != null;
      allow read, list: if request.auth != null && (resource.data.uid == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // GLOBAL FALLBACK FOR ADMIN
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
