
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS COLLECTION
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || request.auth.token.email == "Divitbansal016@gmail.com");
    }
    
    // PAYMENT REQUESTS
    match /payment_requests/{requestId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && 
        (resource.data.uid == request.auth.uid || request.auth.token.email == "Divitbansal016@gmail.com");
      allow update, delete: if request.auth != null && request.auth.token.email == "Divitbansal016@gmail.com";
    }

    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == "Divitbansal016@gmail.com";
    }
  }
}
